<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="519dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_true"
                android:layout_width="154dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="30sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="290dp"
                android:layout_marginRight="40dp"
                android:text="@string/btnTrue" />

            <Button
                android:id="@+id/btn_false"
                android:layout_width="154dp"
                android:layout_height="100dp"
                android:layout_below="@id/btn_true"
                android:layout_marginHorizontal="30sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="290dp"
                android:layout_marginRight="40dp"
                android:text="@string/btnfalse" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/previous_button"
                android:layout_width="70dp"
                android:layout_height="60sp"
                android:layout_marginTop="400dp"
                android:layout_marginLeft="40dp"
                android:layout_below="@id/btn_true"
                android:layout_marginEnd="80dp"
                android:backgroundTint="#DFD2D1"
                android:src="@drawable/doubleprevious"
                android:text="@string/Previous_Quest"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/next_button"
                android:layout_width="70dp"
                android:layout_height="60sp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="400dp"
                android:layout_marginEnd="80dp"
                android:layout_marginBottom="@id/btn_false"
                android:src="@drawable/doublenext"
                android:text="@string/Next_Quest"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="522dp"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progess_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="590dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="28dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="0" />
        </LinearLayout>
    </FrameLayout>


        android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>